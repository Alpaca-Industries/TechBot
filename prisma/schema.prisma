generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Guild {
  id                 String @id
  slotsWinMultiplier Int    @default(0)
  slotsMoneyPool     Int    @default(0)
}

model User {
  id                  String   @id
  wallet              Int      @default(0)
  bank                Int      @default(0)
  currentJob          JobNames @default(JOBLESS)
  jobEXP              Int      @default(0)
  passiveMode         Boolean  @default(false)
  preferredEmojiColor String   @default("yellow")
  premium             Boolean  @default(false)
  verified            Boolean  @default(false)
}

model Inventory {
  userID String
  itemID ItemNames
  count  Int       @default(0)

  @@unique([userID, itemID])
}

model ItemMetaData {
  name        ItemNames @id
  price       Int
  rarity      Rarity    @default(COMMON)
  emoji       String?
  description String    @default("I was forgotten about by the devs ;(")
  sellable    Boolean   @default(false)
  tradeable   Boolean   @default(false)
  collectable Boolean   @default(false)
}

model Pet {
  userID  String
  petType PetTypes
  name    String
  hunger Int @default(10)
  lastFed DateTime

  @@unique([userID, petType])
}

model PetMetaData {
  type        PetTypes @id
  price       Int
  rarity      Rarity   @default(COMMON)
  tradeable   Boolean  @default(false)
  collectable Boolean  @default(false)
  feedInterval    Int      @default(0)
}

model Job {
  name        JobNames @id
  description String   @default("I was forgotten about by the devs ;(")
  minimumXP   Int      @default(0)
}

enum PetTypes {
  DOG
  CAT
  BIRD
  FISH
  HORSE
  PIG
  SHEEP
  TURTLE
  OTHER
}

enum Rarity {
  COMMON
  UNCOMMON
  RARE
  EPIC
  LEGENDARY
}

enum JobNames {
  JOBLESS
  JANITOR
  COOK
  FIRE_FIGHTER
  YOUTUBER
  INVESTOR
  PEPE_KING
}

enum ItemNames {
  GRILLED_CHEESE
  HELICOPTER
  HUNTING_RIFLE
  GOLDEN_CHICKEN_NUGGET
  TV
  LAPTOP
  IPHONE
  FISHING_POLE
  SCISSORS
  TROPHY
  KFC
  FISH
}
